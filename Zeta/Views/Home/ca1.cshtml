<!-- ca1.cshtml -->
@{
    ViewData["HideHeader"] = true;
}

<section class="ca1-container">

    <div class="ca1-content">
        <div class="ca1-text">
            <h1 class="ca1-heading">Creá tu cuenta</h1>
            <h3 class="ca1-subheading">Ingresa tus Nombre y Apellido</h3>
        </div>
        <div class="ca1-inputs-grid">
            <div class="ca1-input-group">
                <input type="text" name="nombre" placeholder="Nombre" required />
            </div>
            <div class="ca1-input-group">
                <input type="text" name="apellido" placeholder="Apellido" required />
            </div>
            <div class="ca1-input-group">
                <input type="date" name="fecha_nacimiento" placeholder="Fecha de Nacimiento" required />
            </div>
            <div class="ca1-input-group">
                <input type="text" name="altura" placeholder="Altura" required />
            </div>
            <div class="ca1-input-group">
                <input type="text" name="peso" placeholder="Peso" required />
            </div>
            <div class="ca1-input-group">
                <input type="text" name="actividad_fisica" placeholder="Actividad física que realizas" required />
            </div>
            <div class="ca1-input-group ca1-single-input">
                <input type="text" name="objetivo" placeholder="Objetivo nutricional-físico" required />
            </div>
        </div>

        <button type="submit" class="ca1-btn-next">Siguiente</button>
    </div>

</section>
