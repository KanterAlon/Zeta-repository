<!-- ca1.cshtml -->
@{
    ViewData["HideHeader"] = true;
}

<section class="contact-page">

    <div class="contact-image-section">
        <img src="~/img/img_contacto.svg" alt="Illustration">
    </div>

    <div class="contact-form-section">

        <h2>Mandanos un mensaje</h2>

        <p>Tus comentarios nos ayudan a mejorar</p>

        <form>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Ejemplo@gmail.com" />
            </div>
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" placeholder="Sabrina Willson" />
            </div>
            <div class="form-group">
                <label for="country">Choose Country</label>
                <select id="country">
                    <option>CA, Los Angeles</option>
                    <!-- Add more options as needed -->
                </select>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" placeholder="Ingresa tu texto"></textarea>
            </div>
            <button type="submit" class="send-message-button">Send Message</button>
        </form>

    </div>

</section>